<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivTouxiang"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:src="@drawable/cc_user" 
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录" 
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"/>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/llInfo"
        >
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_info"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息平台"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
       
         android:id="@+id/l1">
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_active"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园活动"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
     android:id="@+id/l2"
        android:layout_marginTop="20dp">
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_sxyl"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="思想引领"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
     android:id="@+id/l3"
        android:layout_marginTop="20dp">
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_emp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="就业招聘"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
     android:id="@+id/l4"
        android:layout_marginTop="20dp">
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_kaoyan"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考研出国"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/l5">
    <ImageView android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cc_school_tool"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="便利工具"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>
</LinearLayout>
